<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondohojas12"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/permanentmarkerregular"
        android:layout_marginTop="5dp"
        android:text="A jugar"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:background="@drawable/cocosito1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="20sp"
            android:text="Tiempo:" />
            <TextView
                android:id="@+id/textViewTIEMPO"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="50sp"
                android:text="SS" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewNroPregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:text="Numero de Pregunta: 0/10" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="@drawable/borderedondeado"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="En aqui irÃ¡ la pregunta"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonPregunta1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="#00BCD4"
        style="?attr/materialButtonOutlinedStyle"
        android:strokeColor="@color/black"
        android:onClick="pregunta1"
        android:text="Pregunta 1" />
    <Button
        android:id="@+id/buttonPregunta2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="#83BF40"
        style="?attr/materialButtonOutlinedStyle"
        android:strokeColor="@color/black"
        android:onClick="pregunta2"
        android:text="Pregunta 2" />
    <Button
        android:id="@+id/buttonPregunta3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="#DCB53D"
        style="?attr/materialButtonOutlinedStyle"
        android:strokeColor="@color/black"
        android:onClick="pregunta3"
        android:text="Pregunta 3" />
    <Button
        android:id="@+id/buttonPregunta4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="#693DBA"
        style="?attr/materialButtonOutlinedStyle"
        android:strokeColor="@color/black"
        android:onClick="pregunta4"
        android:text="Pregunta 4" />

</LinearLayout>